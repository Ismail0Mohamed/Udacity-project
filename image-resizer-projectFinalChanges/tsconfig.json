{
  "compilerOptions": {
    "target": "es2020", // Modern JS features
    "module": "commonjs", // Node.js module system
    "rootDir": "src", // Your TypeScript source root
    "outDir": "dist", // Where compiled .js files go
    "sourceMap": true, // Useful for debugging
    "resolveJsonModule": true, // Allow importing .json
    "lib": ["es2020"], // Use modern JS, no browser DOM
    "esModuleInterop": true, // Easier CommonJS interop
    "strict": true, // Enable strict type checking
    "forceConsistentCasingInFileNames": true, // Avoid case errors in imports
    "skipLibCheck": true // Speeds up compilation
  },
  "include": [
    "src/**/*.ts" // Only compile .ts files in src/
  ],
  "exclude": ["node_modules", "dist"]
}
